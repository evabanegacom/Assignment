<div class='alignment'>
  <div class='houses'>
    <% @houses.each do |house| %>
    <br>
    <p>Category: House</p>
    <p> Owner <%= house.owner%></p>
    <p> floors <%= house.floors%></p>
    <p> Price $<%= house.price %></p>
    <p> Rooms <%= house.rooms%></p>
    <div class='imgh'><%= image_tag(house.icon, class: 'bigpics') %></div>
    <br>
    <%= button_to 'Buy Now', checkout_create_path, method: :post, params: { id: house.id }, remote: true, class: 'button is-info is-clickable' %>
    <% end %>
  </div>
  <div class='houses'>
    <br>
    <% @commercial_units.each do |unit| %>
    <p>Category: commercial units</p>
    <p> Owner <%= unit.owner%></p>
    <p> shops <%= unit.shops%></p>
    <p> Price $<%= unit.price%></p>
    <p> Rooms <%= unit.parking%></p>
    <div class='imgh'><%= image_tag(unit.icon, class: 'bigpics') %></div>
    <br>
    <%= button_to 'Buy Now', checkout_create_building_path, method: :post, params: { id: unit.id }, remote: true, class: 'button is-info is-clickable' %>
    <% end %>
  </div>
  <div class='houses'>
    <br>
    <% @complex_buildings.each do |building| %>
    <p>Category: Complex building</p>
    <p> Owner <%= building.owner%></p>
    <p> Units <%= building.units%></p>
    <p> Price $<%= building.price%></p>
    <p> Square meter <%= building.sqmt%></p>
    <div class='imgh'><%= image_tag(building.icon, class: 'bigpics') %></div>
    <br>
    <%= button_to 'Buy Now', checkout_create_complex_path, method: :post, params: { id: building.id }, remote: true, class: 'button is-info is-clickable' %>
    <% end %>
  </div>
</div>